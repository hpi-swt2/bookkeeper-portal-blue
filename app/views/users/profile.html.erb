
<p class="body-1" style="text-align:right">
  <%= link_to edit_user_registration_path do %>
    <%= image_tag "edit_square.png", class: "mt-3 ", size: "35x35", alt: "Profil bearbeiten"%>
  <% end %>
</p>

<p class="body-1" style="text-align:center">
  <%= image_tag "profile_picture_placeholder.png", class: "rounded-circle",  size: "128x128", alt: "Profilbild"%>
</p>

<h1 class="headline-1" style="text-align: center"> <%= @user.name %> </h1>

<h2 class="subtitle" style="text-align: left"><%= t 'views.profile.roles' %></h2>
<p class="body-1" style="text-align:left">Student</p>

<h2 class="subtitle" style="text-align: left"><%= t 'views.profile.email' %></h2>
<p class="body-1" style="text-align:left"> <%= @user.email %> </p>

<h2 class="subtitle" style="text-align: left"><%= t 'views.profile.groups' %> <a class="badge rounded-pill text-bg-primary" href="<%= new_group_path %>"><i class="bi bi-plus"></i><%= t 'models.group.add' %></a></h2>
<% if @user.groups.empty? %>
  <p class="body-1" style="text-align:left"> <%= t 'views.profile.no_groups' %></p>
<% else %>
<ul>
<% @user.groups.each do |group| %>
  <li><%= link_to group.name, group %></li>
<% end %>
</ul>
<% end %>
