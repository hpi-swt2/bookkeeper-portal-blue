<head>
  <style>
      @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap');
      circle {
          border-radius: 50%;
      }
      p {
          text-align:left;
          font-size: 18px;
          font-family: 'Roboto';
          font-weight: 400;
          color: #394044;
      }
      h1 {
          text-align:center;
          font-size: 26px;
          font-family: 'Roboto';
          font-weight: 300;
          color: #394044;
      }
      h2 {
          text-align:left;
          font-size: 18px;
          font-family: 'Roboto';
          font-weight: 700;
          color: #B1063A;
      }
  </style>
</head>
<p style="text-align:right">
  <%= link_to edit_user_registration_path do %>
    <%= image_tag "edit_square.png", class: "mt-3 ", size: "35x35", alt: "Profil bearbeiten"%>
  <% end %>
</p>

<p style="text-align:center">
  <%= image_tag "profile_picture_placeholder.png", class: "rounded-circle",  size: "128x128", alt: "Profilbild"%>
</p>

<h1> <%= @user.name %> </h1>

<h2>Rollen</h2>
<p>Student</p>

<h2>Email</h2>
<p> <%= @user.email %> </p>

<h2><%= t 'views.profile.groups' %> <a class="badge rounded-pill text-bg-primary" href="<%= new_group_path %>"><i class="bi bi-plus"></i><%= t 'models.group.add' %></a></h2>
<% if @user.groups.empty? %>
  <p> <%= t 'views.profile.no_groups' %></p>
<% else %>
<ul>
<% @user.groups.each do |group| %>
  <li><%= link_to group.name, group %></li>
<% end %>
</ul>
<% end %>
