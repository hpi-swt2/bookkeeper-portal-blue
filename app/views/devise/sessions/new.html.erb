<div class="text-center form-signin w-100 m-auto" style="max-width: 300px;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <i class="bi bi-journal-bookmark-fill mb-4" style="font-size: 5rem;"></i>
    <h1 class="h3 mb-3 fw-normal">Please log in</h1>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      <%= f.label :email %>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
      <%= f.label :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3 mt-1">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    
    <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary mb-3" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
