<style>
    .place-holder-nav {
        margin-bottom: 4cm;
    }

    .title {
        margin-bottom: 7px;
        margin-top: 15px;
    }

    .box {
        width: 350px;
        border: 1px solid black;
        padding: 5px;
        margin: 5px;
        margin-bottom: 15px;
    }
</style>

<% if user_signed_in? %>
  <h1 class="headline-1 title"><%= t('views.dashboard.greeting', name: @user.first_name)%></h1>


  <h2 class="subtitle box"><%= t 'views.dashboard.unread_messages' %></h2>

  <h2 class="subtitle"><%= t 'views.dashboard.lent_items.title' %></h2>
  <div class="feature-icon mb-1">
    <i class="bi bi-chat-square-quote-fill" style="font-size: 2rem;"></i>
  </div>

  <h2 class="subtitle"><%= t 'views.dashboard.offered_items.title' %></h2>
  <%= render "offered_items"%>

  <h2 class=" subtitle place-holder-nav"><%= t 'views.dashboard.wishlist.title' %></h2>
  <%= render "wishlist"%>

<% else %>
  <p class="lead mb-4"><%= t 'views.dashboard.not_signed_in' %></p>
  <%= link_to new_user_session_path, { class: "btn btn-primary btn-lg px-4" } do %>
    <i class="bi bi-box-arrow-in-right"></i> <%= t 'views.landing_page.login' %>
  <% end %>
  <%= link_to new_user_registration_path, { class: "btn btn-outline-primary btn-lg px-4" } do %>
    <i class="bi bi-person-plus-fill"></i> <%= t 'views.landing_page.signup' %>
  <% end %>
<% end %>
