<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap');

    .body1 {
        font-family: 'Roboto';
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        line-height: 21px;
        color: #394044;
    }

    .body2 {
        color: #394044;
        font-family: 'Roboto';
        font-style: normal;
        font-weight: 500;
        font-size: 16px;
        line-height: 19px;
    }

    .rect-img {
        aspect-ratio: 1/1;
        object-fit: cover;
    }

</style>

<div>
  <% items = Item.where(owner: current_user).order("name ASC") %>
  <% if items.empty? %>
    <p class="body1">Du bietest bisher nichts an.</p>
  <% else %>
    <div class="container text-center">
      <div class="row row-cols-2 row-cols-lg-4 align-items-end justify-content-start">
        <% items.each do |item| %>
          <div class="col" ;>
            <% if item.image.attached? %>
              <%= image_tag(item.image, class: "rounded mb-2 img-fluid rect-img") %>
            <% else %>
              <img class="bi bi-image mb-2" style="font-size: 5rem;"/>
            <% end %>
            <p class="body2"><%= item.name %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>