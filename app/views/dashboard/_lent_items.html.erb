<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap');

    .caption {
        font-family: 'Roboto';
        font-style: normal;
        font-weight: 400;
        font-size: 12px;
        line-height: 14px;
        color: #717B80;
    }

    .body2 {
        font-family: 'Roboto';
        font-style: normal;
        font-weight: 500;
        font-size: 16px;
        line-height: 19px;
        color: #394044;
    }

    .rect-img {
        aspect-ratio: 1/1;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

  #hourglass_empty{
    text-align: center;
  }

  #hourglass_emptyIcon{
    font-size: 12px;
    vertical-align: text-top;
  }

</style>

<div>
  <% items = Item.where(holder: current_user) %>
  <% items = items.sort_by{|item| item.rental_end} %>
  <% if items.empty? %>
    <p class="body1"><%=t 'views.dashboard.no_lent_items' %></p>
  <% else %>
    <div class="container text-center">
      <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 align-items-end justify-content-start">
        <% items.each do |item| %>
          <div class="col" ;>
            <% if item.image.attached? %>
              <%= image_tag(item.image, class: "rounded mb-2 img-fluid rect-img") %>
            <% else %>
              <%= image_tag("image_default.svg", class: "rounded mb-2 img-fluid rect-img") %>
            <% end %>
            <p class="body2"><%= item.name %></p>
            <p class="caption" id="hourglass_empty">
            <span class="material-symbols-outlined" id="hourglass_emptyIcon">
            hourglass_empty
            </span>
              <%= item.remaining_rental_duration%></p>
            <br>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>