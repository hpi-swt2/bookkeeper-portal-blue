
<%= render "qr-scanner" %>

<%= form_tag(search_path, method: :get) do %>
    <div class="input-group mb-3 mt-3">
        <%= text_field_tag :search, params[:search], class: "form-control outline-missing-right", placeholder: "Suche" %>
        <button type="submit" class="btn btn-outline-secondary outline-missing-left outline-missing-right">
            <i class="bi bi-search"></i>
        </button>
        <button type="button" class="btn btn-outline-secondary outline-missing-left" data-bs-toggle="modal" data-bs-target="#qrscanner">
            <i class="bi bi-qr-code-scan"></i>
        </button>
    </div>

    <button class="btn btn-secondary secondaryButton" type="button" data-bs-toggle="modal" data-bs-target="#filter-modal" aria-expanded="false">
        <%= t 'views.search.filter_button' %> <i class="bi bi-sliders2-vertical"></i>
    </button>
    <%= render "filter-modal" %>
<% end %>

<% if @results %>
<div class="row row-cols-1 row-cols-md-4 g-4">
    <% @results.each do |result| %>
        <div class="card ms-2" style="width: 18rem; border: none;">
            <div class="card-body">
                <%= image_tag(result.image, class: "card-img-top", style: "border-radius: 5px;") if result.image.attached? %>
                <h5 class="card-title mt-1" style="white-space: nowrap; overflow: hidden;"><%= result.name %></h5>
                <a href="<%= item_path(result) %>" class="stretched-link"></a>
            </div>
        </div>
    <% end %>
</div>
<% end %>