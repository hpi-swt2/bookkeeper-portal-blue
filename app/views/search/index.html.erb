
<%= render "qr-scanner" %>

<%= form_tag(search_path, method: :get) do %>
    <div class="input-group mb-3 mt-3">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Suche" %>
        <button type="submit" class="btn btn-outline-secondary">
            <i class="bi bi-search"></i>
        </button>
        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#qrscanner">
            <i class="bi bi-qr-code-scan"></i>
        </button>
    </div>
    <div class="btn-group mb-3">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= t 'views.search.filter_button' %>
        </button>
        <%= render "filter-modal" %>
    </div>
<% end %>

<% if @results %>
<section class="row row-cols-1 row-cols-md-4 g-4">
    <% @results.each do |result| %>
        <div class="card ms-2" style="width: 18rem; border: none;">
            <div class="card-body">
                <%= image_tag(result.image, class: "card-img-top", style: "border-radius: 5px;") if result.image.attached? %>
                <h5 class="card-title mt-1" style="white-space: nowrap; overflow: hidden;"><%= result.name %></h5>
                <a href="<%= item_path(result) %>" class="stretched-link"></a>
            </div>
        </div>
    <% end %>
</section>
<% end %>