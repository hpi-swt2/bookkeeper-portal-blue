<div class="modal-fullscreen modal fade" id="filter-modal" tabindex="-1" aria-labelledby="filter-modal-title" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 subtitle" id="filter-modal-title"><%= t 'views.search.filter_modal.title' %></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4 class="subtitle mt-2"><%= t 'views.search.filter_modal.availability' %></h4>
                <%= select_tag "availability", options_for_select(@availability_options), class: "form-select", include_blank: true %>
                <h4 class="subtitle mt-2"><%= t 'views.search.filter_modal.category' %></h4>
                <%= select_tag "category", options_for_select(@category_options), class: "form-select", include_blank: true %> <%# https://apidock.com/rails/ActionView/Helpers/FormTagHelper/select_tag %>
            </div>
            <div class="modal-footer align-center">
                <button class="btn btn-secondary secondaryButton" data-bs-dismiss="modal" type="submit"><%= t 'views.search.filter_modal.results' %></button>
            </div>
        </div>
    </div>
</div>