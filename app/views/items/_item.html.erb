<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= item.category %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= item.location %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= link_to item.image.filename, item.image if item.image.attached? %>
  </p>

  <p>
    <strong>Price in Euro:</strong>
    <% if (item.price_in_euro != nil) %>
      <%= item.price_in_euro[0] %>â‚¬ <%=item.price_in_euro[1] %>ct
    <% end %>
  </p>

  <p>
    <strong>Rental duration sec:</strong>
    <%= item.rental_duration_sec %>
  </p>

  <p>
    <strong>Rental start:</strong>
    <%= item.rental_start %>
  </p>

  <p>
    <strong>Return checklist:</strong>
    <%= item.return_checklist %>
  </p>

</div>
