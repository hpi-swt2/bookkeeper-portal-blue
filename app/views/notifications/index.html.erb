<p style="color: green"><%= notice %></p>


<h2><%= t 'views.notifications.title' %></h2>

<div id="notifications">
  <% @active_dates.each do |(date, notifications)| %>
    <h2>
      <%= notifications.first.date.strftime('%d. %B %y') %>
    </h2>
    <div class="notification-blue-box">
      <% notifications.each do |notification| %>
        <div class="notification" onclick="location.href='<%= 'notifications/' + notification.id.to_s %>'">

            <!-- display title as bold if notification is unread -->
            <% if notification.unread == true %>
            <h3>
              <b><%= notification.title %></b>
            </h3>
            <p>
              <%= notification.description %>
            </p>
            <% else %>
            <h3>
              <!-- set opacity to 0.7 if notification is read -->
              <p style="opacity: 0.7"><%= notification.title %></p>
            </h3>
            <p style="opacity: 0.7">
              <%= notification.description %>
            </p>
            <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
  <h2>
    <%= t 'views.notifications.deletion_history' %>
  </h2>
  <% @inactive_dates.each do |(date, notifications)| %>
    <h2>
      <%= notifications.first.date.strftime('%d. %B %y') %>
    </h2>
    <div class="notification-grey-box">
      <% notifications.each do |notification| %>
        <div class="notification" onclick="location.href='<%= 'notifications/' + notification.id.to_s %>'">
          <h3>
            <%= notification.title %>
          </h3>
          <p>
            <%= notification.description %>
          </p>
        </div>
      <% end %>
      Ëš
    </div>

  <% end %>
</div>